@model IEnumerable<Entidad.DocumentoBien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Documentos Generados</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("GenerarDoc", "DocumentosG")"><i class="glyphicon glyphicon-plus"> </i> Generar Documento</a>
</p>
<table class="table" id="tablaD">

    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Año
            </th>
            <th>
                Departamento_Origen
            </th>
            <th>
                Departamento_Destino
            </th>
            <th>
                Secuencia
            </th>
            <th>
                Departamento_solicitud
            </th>
            <th>
                Nombre_Usuario
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.id
            </td>
            <td>
                @item.Año
            </td>
            <td>
                @item.Nombres_O
            </td>
            <td>
                @item.NombreDepa
            </td>
            <td>
                @item.Secuencia
            </td>
            <td>
                @item.Idnombre
            </td>
            <td>
                @item.Nombre
            </td>
            <td>
                <a class="btn btn-primary btn-xs" title="Editar" href="@Url.Action("Editar", "DocumentosG", new { id = item.id })">
                    <i class="glyphicon glyphicon-edit "></i>
                </a>
                <a class="btn btn-info btn-xs" title="Ver Secuencia" href="@Url.Action("ConsigueDoc", "DocumentosG", new { id = item.id })">
                    <i class="glyphicon glyphicon-info-sign "></i>
                </a>
                <a class="btn btn-danger btn-xs" title="Eliminar" href="@Url.Action("Eliminar", "DocumentosG", new { id = item.id })">
                    <i class="glyphicon glyphicon-trash "></i>
                </a>
            </td>
        </tr>
        }
    </tbody>


</table>
@section scripts{
    <script>
        $('#tablaD').DataTable({

            "pageLength": 3,
            lengthMenu: [3, 10, 20, 50, 100, 200, 500],
        });


    </script>

}


